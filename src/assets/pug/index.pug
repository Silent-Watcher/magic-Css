                .row.h-100 
                    section#boxShadowMagic_tools.col-6.text-center.d-flex.flex-column.align-items-center.justify-content-center
                        
                    section#boxShadowMagic_result.col-6.d-flex.flex-column.align-items-center.justify-content-center
