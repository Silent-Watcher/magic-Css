                        p.mb-0.fs-5 Bottom-left
                        .slider_range.justify-content-start
                            .wrapper_slider
                                span.navigator 0
                                input.slider_range_input#bottomLeftBorder_input(type='range' min='0' max='100' value='0').border_range
                    .col-6 
                        p.mb-0.fs-5 Top-right
                        .slider_range.justify-content-start
                            .wrapper_slider
